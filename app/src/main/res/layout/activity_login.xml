<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back_button_bg"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back"
        android:tint="@android:color/white" />
    <ImageView
        android:id="@id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65.0dip"
        android:src="@drawable/img"
        android:layout_above="@id/textView" />

    <TextView
        android:id="@+id/textView"
        android:text="लॉगिन करा"
        android:textSize="30.0dip"
        android:textColor="#ff1e0367"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dip"
        android:layout_marginBottom="10.0dip"
        android:fontFamily="arial"
        android:layout_above="@id/main" />

    <androidx.cardview.widget.CardView
        android:id="@id/main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10.0dip"
        android:layout_marginEnd="10.0dip"
        app:cardCornerRadius="20.0dip"
        app:cardElevation="20.0dip">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip">

                <EditText
                    android:id="@+id/mob_no"
                    android:hint="मोबाइल नंबर"
                    android:textColorHint="#ff3e3b3b"
                    android:background="@drawable/custombutton"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:layout_margin="10.0dip"
                    android:ems="10"
                    android:drawableLeft="@drawable/baseline_phone_android_24"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/Password"
                    android:hint="पासवर्ड"
                    android:textColorHint="#ff3e3b3b"
                    android:background="@drawable/custombutton"
                    android:padding="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:layout_margin="10.0dip"
                    android:ems="10"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/forgotPassword"
                    android:text="पासवर्ड विसरलात?"
                    android:textSize="15.0dip"
                    android:textColor="#ff1e0367"
                    android:gravity="end"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:padding="5.0dip" />

                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <android.widget.Button
                        android:id="@id/login"
                        android:text="लॉगिन करा"
                        android:textSize="20.0dip"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/regbutton"
                        android:padding="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:layout_marginBottom="10.0dip"
                        android:drawableEnd="@drawable/baseline_arrow_forward_24"
                        android:layout_marginStart="10.0dip"
                        android:layout_marginEnd="10.0dip" />

                    <ProgressBar
                        android:id="@+id/ProgressBar"
                        android:visibility="invisible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        style="?android:progressBarStyle" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
