<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="पासवर्ड बदला"
            android:textSize="22sp"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Authentication Method Selection -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUseOldPassword"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="जुना पासवर्ड"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/modern_button_blue"
                android:textColor="@android:color/white"
                android:stateListAnimator="@null"
                android:elevation="0dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUseDateOfBirth"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="जन्म तारीख"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/modern_button_outline"
                android:textColor="@color/primary_blue"
                android:stateListAnimator="@null"
                android:elevation="0dp" />
        </LinearLayout>

        <!-- Old Password Field -->
        <EditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:hint="जुना पासवर्ड"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp"
            android:background="@drawable/modern_input_field"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:inputType="textPassword"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawablePadding="12dp"
            android:drawableTint="@color/primary_blue" />

        <!-- Date of Birth Field -->
        <EditText
            android:id="@+id/etDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:hint="जन्म तारीख"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp"
            android:background="@drawable/modern_input_field"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:drawablePadding="12dp"
            android:drawableTint="@color/primary_blue"
            android:visibility="gone" />

        <!-- New Password Field -->
        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:hint="नवीन पासवर्ड"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp"
            android:background="@drawable/modern_input_field"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:inputType="textPassword"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawablePadding="12dp"
            android:drawableTint="@color/primary_blue" />

        <!-- Confirm Password Field -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:hint="पासवर्ड पुष्टी करा"
            android:textColorHint="@color/secondary_text_color"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp"
            android:background="@drawable/modern_input_field"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:inputType="textPassword"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawablePadding="12dp"
            android:drawableTint="@color/primary_blue" />

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="रद्द करा"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/modern_button_outline"
                android:textColor="@color/primary_blue"
                android:stateListAnimator="@null"
                android:elevation="0dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="बदला"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/modern_button_blue"
                android:textColor="@android:color/white"
                android:stateListAnimator="@null"
                android:elevation="0dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
