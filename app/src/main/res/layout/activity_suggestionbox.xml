<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="16dp"
            android:background="@drawable/gradient_blue_header"
            android:elevation="6dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_button_bg"
                android:src="@drawable/ic_arrow_back"
                android:tint="@android:color/white"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:text="तक्रार पेटी"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />
        </RelativeLayout>

        <!-- Button to toggle between Form and My Suggestions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/surface"
            android:padding="8dp"
            android:elevation="2dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/newSuggestionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="नवीन सूचना"
                android:textSize="14sp"
                app:backgroundTint="@color/primary_blue"
                android:textColor="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mySuggestionsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="माझ्या सूचना"
                android:textSize="14sp"
                app:backgroundTint="@color/light_gray"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Form View -->
        <FrameLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <include layout="@layout/fragment_suggestion_form" />

        </FrameLayout>

        <!-- My Suggestions View -->
        <FrameLayout
            android:id="@+id/listContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <include layout="@layout/fragment_my_suggestions" />

        </FrameLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

