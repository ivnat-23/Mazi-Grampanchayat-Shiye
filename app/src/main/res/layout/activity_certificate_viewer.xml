<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="16dp"
        android:background="@drawable/gradient_blue_header"
        android:elevation="6dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_button_bg"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            android:text="प्रमाणपत्र"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_picture_as_pdf_24"
            android:tint="@color/primary_blue"
            android:layout_marginBottom="24dp"
            android:contentDescription="Certificate" />

        <TextView
            android:id="@+id/certificateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="प्रमाणपत्र"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="तुमचे जन्म प्रमाणपत्र तयार आहे"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/downloadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="डाउनलोड करा"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            app:backgroundTint="@color/accent_green"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_picture_as_pdf_24"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="शेअर करा"
            android:textSize="16sp"
            android:padding="16dp"
            app:backgroundTint="@color/primary_blue"
            android:textColor="@color/white"
            app:icon="@drawable/baseline_arrow_forward_24"
            app:iconGravity="textStart" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>

